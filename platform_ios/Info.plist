<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Basic bundle identity (replace placeholders) -->
    <key>CFBundleName</key>
    <string>WinzigeGiganten</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.winzigegiganten</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Ensure this app requires iOS (good for iPad kiosk builds) -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Kiosk / display keys -->
    <key>UIRequiresFullScreen</key>
    <true/>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Enable Finder file sharing so you can copy the webapp into Documents -->
    <key>UIFileSharingEnabled</key>
    <true/>

</dict>
</plist>
